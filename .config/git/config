[alias]
	co = checkout
	br = branch
	ci = commit
	st = status

[core]
  compression = 9
  whitespace = error
  preloadindex = true
	pager = diff-so-fancy | less --tabs=4 -RFX

[include]
  path = ~/.config/git/signing

[advice]
  addEmptyPathspec = false
[pull]
	rebase = true
  default = current

[rebase]
  autoStash = true
  missingCommitsCheck = warn
[push]
  autoSetupRemote = true
  default = current
  followTags = true
[init]
	defaultBranch = main

[status]
  branch = true
  showStash = true
  ; showUntrackedFiles = all

[diff]
  context = 5
  renames = copies
  interHunkContext = 10

; [pager]
;   diff = diff-so-fancy | $PAGER

[diff-so-fancy]
  markEmptyLines = false

[log]
  abbrevCommit = true
  graphColors = blue,yellow,cyan,magenta,green,red
[color "diff"]
  meta        = black bold
  frag        = magenta
  context     = white
  whitespace  = yellow reverse
  old         = red

[interactive]
  diffFilter = diff-so-fancy --patch
  singlekey = false

[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta

[branch]
  sort = -commiterdate

[tag]
  sort = -taggerdate
	gpgSign = true

[color "branch"]
  current   = magenta
  local     = default
  remote    = yellow
  upstream  = green
  plain     = blue

